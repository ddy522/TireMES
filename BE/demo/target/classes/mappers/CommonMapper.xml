<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mappers.CommonMapper">

    <!-- 공통 SelectBox 데이터 조회 -->
    <select id="getSelectOptions" parameterType="string" resultType="map">
        <choose>
            <when test="type eq 'part'">
                SELECT part_code AS value, part_name AS label
                FROM part
                ORDER BY part_code
            </when>
            <when test="type eq 'machine'">
                SELECT machine_code AS value, machine_name AS label
                FROM machine
                ORDER BY machine_code
            </when>
            <otherwise>
                SELECT '' AS value, '' AS label
            </otherwise>
        </choose>
    </select>

</mapper>
