<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.LotListMapper">
    <select id="selectLotsByWorksheetSkey" resultType="com.example.demo.model.LotListModel">
        SELECT  process_no,
                lot_date,
                l.part_code,
                p.part_name,
                l.qty,
                l.lotno,
                l.skey,
                l.created_at
        FROM lot l
        LEFT JOIN part p ON p.part_code = l.part_code
        WHERE r_skey = #{worksheetSkey}
        AND l.useyn='Y'
        order by l.created_at desc
    </select>

    <update id="deleteLot" parameterType="String">
        CALL delete_lotno_production(#{worksheetSkey},#{lotNo});
    </update>

</mapper>
