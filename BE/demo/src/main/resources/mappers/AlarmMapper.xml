<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.AlarmMapper">
    <select id="getAlarms" resultType="com.example.demo.model.AlarmModel">
        SELECT
        message AS title ,
        DATE_FORMAT(created_at, '%Y-%m-%d') AS time,
        alarm_level AS level
        FROM
        alarm
        ORDER BY created_at DESC
        LIMIT 3
    </select>


</mapper>